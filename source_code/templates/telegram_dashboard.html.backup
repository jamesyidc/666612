    <script>
        let currentPage = 1;
        let autoRefreshTimer = null;
        
        // åŠ è½½çŠ¶æ€
        async function loadStatus() {
            try {
                const response = await fetch('/api/telegram/status?_=' + Date.now());
                const data = await response.json();
                
                if (data.success) {
                    const statusBadge = document.getElementById('statusBadge');
                    if (data.data.is_running) {
                        statusBadge.textContent = 'âœ… è¿è¡Œä¸­ (PID: ' + data.data.pid + ')';
                        statusBadge.className = 'status-badge running';
                    } else {
                        statusBadge.textContent = 'âŒ æœªè¿è¡Œ';
                        statusBadge.className = 'status-badge stopped';
                    }
                    
                    const stats = data.data.database_stats;
                    document.getElementById('totalSent').textContent = stats.total_sent || 0;
                    document.getElementById('sent1h').textContent = stats.sent_1h || 0;
                    document.getElementById('sentToday').textContent = stats.sent_today || 0;
                    document.getElementById('lastSent').textContent = stats.last_sent_time || '--';
                    
                    // æ¸²æŸ“ä¿¡å·ç±»å‹ç»Ÿè®¡
                    renderSignalTypes(stats.signal_counts || {});
                }
            } catch (error) {
                console.error('åŠ è½½çŠ¶æ€å¤±è´¥:', error);
            }
        }
        
        // æ¸²æŸ“ä¿¡å·ç±»å‹ç»Ÿè®¡
        function renderSignalTypes(signalCounts) {
            const container = document.getElementById('signalTypes');
            
            const types = {
                'support_resistance': 'æ”¯æ’‘å‹åŠ›çº¿',
                'count_alerts': 'è®¡æ¬¡é¢„è­¦',
                'trading_signals': 'äº¤æ˜“ä¿¡å·',
                'v6_signals': 'ä¹°ç‚¹4'
            };
            
            let html = '';
            for (const [key, name] of Object.entries(types)) {
                const count = signalCounts[key] || 0;
                html += `
                    <div class="signal-type-card">
                        <h4>${name}</h4>
                        <div class="count">${count}</div>
                    </div>
                `;
            }
            
            container.innerHTML = html || '<div class="no-data">æš‚æ— æ•°æ®</div>';
        }
        
        // åŠ è½½å†å²è®°å½•
        async function loadHistory(page = 1) {
            try {
                currentPage = page;
                const filterType = document.getElementById('filterType').value;
                
                const url = `/api/telegram/history?page=${page}&limit=20&type=${filterType}&_=${Date.now()}`;
                const response = await fetch(url);
                const data = await response.json();
                
                if (data.success) {
                    renderHistory(data.data.records);
                    renderPagination(data.data.page, data.data.pages);
                } else {
                    document.getElementById('historyContainer').innerHTML = 
                        '<div class="no-data">âŒ åŠ è½½å¤±è´¥: ' + data.error + '</div>';
                }
            } catch (error) {
                console.error('åŠ è½½å†å²å¤±è´¥:', error);
                document.getElementById('historyContainer').innerHTML = 
                    '<div class="no-data">âŒ ç½‘ç»œé”™è¯¯ï¼Œè¯·ç¨åé‡è¯•</div>';
            }
        }
        
        // æ¸²æŸ“å†å²è®°å½•è¡¨æ ¼
        function renderHistory(records) {
            const container = document.getElementById('historyContainer');
            
            if (!records || records.length === 0) {
                container.innerHTML = '<div class="no-data">æš‚æ— å†å²è®°å½•</div>';
                return;
            }
            
            const typeNames = {
                'support_resistance': 'æ”¯æ’‘å‹åŠ›çº¿',
                'count_alerts': 'è®¡æ¬¡é¢„è­¦',
                'trading_signals': 'äº¤æ˜“ä¿¡å·',
                'v6_signals': 'ä¹°ç‚¹4'
            };
            
            let html = `
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ä¿¡å·ç±»å‹</th>
                            <th>å¸ç§</th>
                            <th>ä¿¡å·åç§°</th>
                            <th>å‘é€æ—¶é—´</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            records.forEach(record => {
                const typeName = typeNames[record.signal_type] || record.signal_type;
                const typeClass = record.signal_type.replace('_', '-');
                
                html += `
                    <tr>
                        <td>${record.id}</td>
                        <td><span class="signal-badge ${typeClass}">${typeName}</span></td>
                        <td><strong>${record.symbol || '--'}</strong></td>
                        <td>${record.signal_name}</td>
                        <td>${record.sent_time}</td>
                    </tr>
                `;
            });
            
            html += `
                    </tbody>
                </table>
            `;
            
            container.innerHTML = html;
        }
        
        // æ¸²æŸ“åˆ†é¡µ
        function renderPagination(currentPage, totalPages) {
            const container = document.getElementById('pagination');
            
            if (totalPages <= 1) {
                container.innerHTML = '';
                return;
            }
            
            let html = `
                <button onclick="loadHistory(${currentPage - 1})" ${currentPage === 1 ? 'disabled' : ''}>
                    â† ä¸Šä¸€é¡µ
                </button>
            `;
            
            // æ˜¾ç¤ºé¡µç 
            const startPage = Math.max(1, currentPage - 2);
            const endPage = Math.min(totalPages, currentPage + 2);
            
            for (let i = startPage; i <= endPage; i++) {
                html += `
                    <button onclick="loadHistory(${i})" class="${i === currentPage ? 'active' : ''}">
                        ${i}
                    </button>
                `;
            }
            
            html += `
                <button onclick="loadHistory(${currentPage + 1})" ${currentPage === totalPages ? 'disabled' : ''}>
                    ä¸‹ä¸€é¡µ â†’
                </button>
            `;
            
            container.innerHTML = html;
        }
        
        // å¯åŠ¨è‡ªåŠ¨åˆ·æ–°
        function startAutoRefresh() {
            if (autoRefreshTimer) {
                clearInterval(autoRefreshTimer);
            }
            
            autoRefreshTimer = setInterval(() => {
                loadStatus();
                loadHistory(currentPage);
            }, 30000); // 30ç§’åˆ·æ–°ä¸€æ¬¡
        }
        
        // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
        window.addEventListener('DOMContentLoaded', () => {
